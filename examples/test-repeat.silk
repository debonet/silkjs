<!-- repeat element -->
<defelt name="repeat" times="0">
	var vscope = [];
	var scopeInner = new Scope();

	return function(){
		var jqOut = $();
		var n;
		var c = _.times;
		var cAlloc = vscope.length;

		// delete exess
		vscope = vscope.slice(0,c);
		for (n=c; n<cAlloc; n++){
			scopeInner.delvar(n);
		}				

		// make new ones, if needed
		for (n=vscope.length; n<c; n++){
			vscope[n] = scope.clone();
			vscope[n].defvar("_index",n);
			scopeInner.defvar(n, compile(vscope[n],jq.contents()));
		}

		// eval and add
		for (n=0; n<c; n++){
			jqOut = jqOut.add(scopeInner._[n]);
		}
		return jqOut;
	};

</defelt>


