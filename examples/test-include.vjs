
<!-- include --> 
<defelt name="include">
	defvar("_shtmlLoaded");
	defvar("_bLoaded", false);

	return function(){
		if (!_._bLoaded){
			$.ajax({
				url: _.file,
				success: function(sData, sStatus){
					console.log("loaded...");
					_._shtmlLoaded = compile(scope,$($.parseHTML(sData))());
					_._bLoaded = true;
					Silk.digest();
				}
			});
		}
		return _._bLoaded ? _._shtmlLoaded : _._inner;
	};
</defelt>


