	dont show this
</if>

<if test="true">\
	show this
</if>

<if>
	dont show
</if>


<!-- switch/case -->
<defelt name="case" test="true">
	return function(){
		if (!_.switchflag && _.test){
			_.switchflag = true;
			return _._inner;
		}
		return $();
	};
</defelt>

<defelt name="switch">
	_.defvar('switchflag',false);
	return function(){
		return _._inner;
	};
</defelt>



